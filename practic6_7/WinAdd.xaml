<Window x:Class="practic6_7.WinAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practic6_7"
        mc:Ignorable="d"
        Title="WinAdd" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="119*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Материал работы: " VerticalAlignment="Center"/>
        <TextBox Name="tbKind" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="40" Width="150"/>
        
        <Label Content="Дата Создания: " VerticalAlignment="Center" Grid.Row="1"/>
        <DatePicker Name="dpDateCreate" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="40" Width="150"/>
        <Button Name="btnSave" Content="Save" Grid.Row="3" Grid.ColumnSpan="2" Height="40" Width="200" Click="btnSave_Click"/>
    </Grid>
</Window>
