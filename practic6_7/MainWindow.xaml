<Window x:Class="practic6_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practic6_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="135*"/>
            <RowDefinition Height="117*"/>
            <RowDefinition Height="182*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="179*"/>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="65*"/>
        </Grid.ColumnDefinitions>
        <Button Name="tbToAddDelete" Content="Add/Delete" Grid.Column="2" Grid.Row="1" Click="tbToAddDelete_Click"/>
        <Button Name="tbEdit" Content="Edit" Grid.Column="4" Grid.Row="1" Click="tbEdit_Click"/>
    </Grid>
</Window>
